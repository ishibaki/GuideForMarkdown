keywords = {Actin,Chirality,Developmental constraint,Directional asymmetry,Handedness,Invertebrates,Myosin I},
number = {12},
pages = {3497--3515},
pmid = {19035360},
title = {{The development and evolution of left-right asymmetry in invertebrates: Lessons from Drosophila and snails}},
volume = {237},
year = {2008}
