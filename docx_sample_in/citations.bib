journal = {Dev. Dyn.},
keywords = {Biophysical determinants of form,Canalization of development,Cell behaviors,Central nervous system,Chick embryo,Folic acid,Genes,Heredity,Morphogenesis,Mouse knockouts,Neural folds,Neural groove,Neural plate,Neural tube defects (NTDs),Neurulation defects},
