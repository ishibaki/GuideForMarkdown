isbn = {0092-8674 (Print)$\backslash$n0092-8674 (Linking)},
issn = {00928674},
journal = {Cell},
number = {1},
pages = {55--62},
pmid = {2981631},
title = {{opa: A novel family of transcribed repeats shared by the Notch locus and other developmentally regulated loci in D. melanogaster}},
volume = {40},
year = {1985}
}
