@article{Wharton1985,
abstract = {The principal transcription product of Notch, a locus involved in the neurogenesis of D. melanogaster, is a developmentally regulated poly(A)+RNA approximately 10.5 kb in length. Analysis of the structure of this RNA has revealed a 93 bp repeated sequence that is shared by many other developmentally regulated transcription units. Nucleotide sequence analysis of the repeat shows an unusual structure consisting predominantly of the triplets CAG and CAA, both of which can code for the amino acid Gin. We present evidence indicating that the Notch repeat is a member of a novel family of repetitive elements, which we term the opa family. Our data suggest that some of these elements may be not only transcribed but also translated. We compare opa with other known transcribed repeats and speculate on its functional significance. {\textcopyright} 1985.},
author = {Wharton, Kristi A. and Yedvobnick, Barry and Finnerty, Victoria G. and Artavanis-Tsakonas, Spyros},
