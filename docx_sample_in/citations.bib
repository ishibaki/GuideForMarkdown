keywords = {Cell chirality,Cortical inheritance,F actin,Left-right asymmetry,Myosin I},
number = {1710},
pmid = {27821533},
title = {{Cell chirality: Its origin and roles in left-right asymmetric development}},
volume = {371},
year = {2016}
