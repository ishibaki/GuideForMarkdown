journal = {Mech. Dev.},
keywords = {left,right asymmetry},
pages = {146--162},
pmid = {24800645},
publisher = {Elsevier Ireland Ltd},
title = {{Left-right asymmetry is formed in individual cells by intrinsic cell chirality}},
url = {http://dx.doi.org/10.1016/j.mod.2014.04.002},
volume = {133},
